<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_caleg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmc.trencenter.activity.DetailCalegAdmin">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_logo_white"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_below="@id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Data Caleg"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/foto_caleg"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaCalon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tempatLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempat Lahir"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tanggalLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/umur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umur"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/jenisKelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/suku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suku"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/agama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agama"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/noHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Handphone"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Facebook :"
                    android:drawableLeft="@drawable/facebook"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Instagram :"
                    android:drawableLeft="@drawable/instagram"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
