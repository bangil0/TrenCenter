<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_input_relawan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.tren.trencenter.activity.pendukung.InputPendukung">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="@color/colorPrimary"/>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/editData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/statusBar"
        android:textColor="@android:color/white"
        android:text="Update Data Caleg"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:layout_below="@id/appbar"
        android:layout_above="@id/editData"
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nama"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Nama"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/tempatLahir"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Tempat Lahir"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/tanggalLahir"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:editable="false"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Tanggal Lahir"
                android:focusable="false"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="datetime"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/umur"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Umur"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="datetime"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <Spinner
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@android:drawable/btn_dropdown" />

            <Spinner
                android:id="@+id/jenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/suku"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Suku"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/agama"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Agama"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/nomorHP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Nomor Handphone"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/alamat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Alamat"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/facebook"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Akun Facebook"
                android:drawableRight="@drawable/facebook"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/instagram"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                android:hint="Akun Instagram"
                android:drawableRight="@drawable/instagram"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textColorHint="#ccc" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
